<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hizmetler">

    <Button
        android:id="@+id/buttonPeriyodikBakim"
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="284dp"
        android:text="Periyodik Bakım"
        app:layout_constraintStart_toStartOf="@+id/buttonOnarimHizmetleri"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonOnarimHizmetleri"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Onarım Hizmetleri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPeriyodikBakim" />

    <Button
        android:id="@+id/buttonBoyamaveKaporta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Boyama ve Kaporta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOnarimHizmetleri" />
</androidx.constraintlayout.widget.ConstraintLayout>